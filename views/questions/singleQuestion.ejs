<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Question Cards</title>
  <link rel="stylesheet" href="/register.css">
  <style>
    body body {
  margin: 0;
  font-family: 'Segoe UI', sans-serif;
  background: linear-gradient(135deg, #fff5f0, #ffe7e0);
  line-height: 1.6; /* Added for better readability */
  color: #3d1f1f; /* Default text color */
}

nav {
  background-color: #ffccbb;
  padding: 16px 24px;
  box-shadow: 0 4px 8px rgba(255, 135, 95, 0.2);
  position: sticky;
  top: 0;
  z-index: 100;
  display: flex; /* Added for potential navbar content alignment */
  align-items: center; /* Added for potential navbar content alignment */
  justify-content: space-between; /* Added for potential navbar content alignment */
}

nav h1 {
  margin: 0;
  font-size: 24px;
  color: #4d2c2c;
}

.card-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 32px;
  padding: 60px 20px;
  max-width: 800px;
  margin: 0 auto;
}

.card {
  background: linear-gradient(145deg, #ffe0cc, #fff1e6);
  color: #4d2c2c;
  border-radius: 20px;
  box-shadow: 0 8px 20px rgba(255, 135, 95, 0.25);
  padding: 28px 24px;
  width: 100%;
  max-width: 700px;
  transition: transform 0.3s ease, box-shadow 0.3s ease, background 0.3s ease;
  border: 1px solid #ffd8c2;
  box-sizing: border-box; /* Ensures padding and border are included in the element's total width and height */
}

.card:hover {
  transform: translateY(-4px);
  background: linear-gradient(135deg, #ffd8c2, #ffeede);
  box-shadow: 0 12px 28px rgba(255, 135, 95, 0.35);
}

.question {
  font-size: 18.5px;
  font-weight: 600;
  margin-bottom: 16px;
  color: #3d1f1f;
}

.card p {
  margin: 12px 0;
  line-height: 1.6;
  color: #4d2c2c;
}

.card img {
  width: 100%;
  max-width: 100%;
  height: auto;
  border-radius: 12px;
  margin: 16px 0;
  box-shadow: 0 4px 12px rgba(255, 135, 95, 0.2);
  display: block; /* Ensures image does not have extra space below it */
}

.author {
  font-size: 14.5px;
  color: #7a3e32;
  text-align: right;
  font-style: italic;
  margin-top: 20px;
}

/* Answer Section Styling */
.answer-form {
  background: linear-gradient(145deg, #ffe0cc, #fff1e6);
  border-radius: 20px;
  box-shadow: 0 8px 20px rgba(255, 135, 95, 0.25);
  padding: 28px 24px;
  width: 100%;
  max-width: 700px;
  border: 1px solid #ffd8c2;
  box-sizing: border-box; /* Ensures padding and border are included in the element's total width and height */
}

.answer-section {
  margin-bottom: 20px;
}

.answer-section label {
  display: block;
  font-size: 16px;
  font-weight: 600;
  color: #3d1f1f;
  margin-bottom: 8px;
}

.answer-section textarea {
  width: 100%;
  min-height: 150px;
  padding: 16px;
  border: 2px solid #ffd8c2;
  border-radius: 12px;
  font-family: 'Segoe UI', sans-serif;
  font-size: 14px;
  color: #4d2c2c;
  background: #fff;
  resize: vertical;
  transition: border-color 0.3s ease, box-shadow 0.3s ease;
  box-sizing: border-box;
}

.answer-section textarea:focus {
  outline: none;
  border-color: #ff8754;
  box-shadow: 0 0 0 3px rgba(255, 135, 84, 0.1);
}

.answer-section textarea::placeholder {
  color: #a67c6c;
  font-style: italic;
}

.submit-btn {
  background: linear-gradient(135deg, #ff8754, #ff6b35);
  color: white;
  border: none;
  padding: 12px 32px;
  font-size: 16px;
  font-weight: 600;
  border-radius: 25px;
  cursor: pointer;
  transition: all 0.3s ease;
  box-shadow: 0 4px 12px rgba(255, 135, 95, 0.3);
  min-width: 120px;
  display: block; /* Makes the button take full width on small screens if desired, or allows text-align on its parent */
  margin-left: auto; /* Aligns button to the right if display is block and parent is flex/grid */
  margin-right: auto; /* Centers the button if display is block */
}

.submit-btn:hover {
  background: linear-gradient(135deg, #ff6b35, #ff5722);
  transform: translateY(-2px);
  box-shadow: 0 6px 16px rgba(255, 135, 95, 0.4);
}

.submit-btn:active {
  transform: translateY(0);
}

/* Answers specific styling - Added a .answer class to the outer div surrounding the card for answers */
.answer {
  width: 100%;
  max-width: 700px;
  /* You can add specific styling for the answer section if needed */
}

/* Media Queries for Responsiveness */
@media (max-width: 768px) {
  .card-container {
    padding: 40px 15px;
  }
  
  .card,
  .answer-form {
    padding: 20px 16px;
  }
  
  .answer-section textarea {
    min-height: 120px;
    padding: 12px;
    font-size: 16px; /* Prevents zoom on iOS */
  }
  
  .submit-btn {
    width: 100%;
    padding: 14px;
    margin-left: 0; /* Override margin for full width */
    margin-right: 0; /* Override margin for full width */
  }
}

@media (max-width: 480px) {
  nav {
    padding: 12px 15px;
  }

  nav h1 {
    font-size: 20px;
  }

  .card-container {
    gap: 20px;
    padding: 30px 10px;
  }

  .question {
    font-size: 17px;
    margin-bottom: 12px;
  }

  .card p {
    font-size: 15px;
  }

  .author {
    font-size: 13px;
    margin-top: 15px;
  }

  .answer-section label {
    font-size: 15px;
  }

  .answer-section textarea {
    min-height: 100px;
    font-size: 15px;
  }

  .submit-btn {
    padding: 12px;
    font-size: 15px;
  }
}
  </style>
</head>
<body>
  <!-- Navbar include -->
  <%- include("../components/navbar.ejs") %>

  <!-- Card container -->
  <div class="card-container">
    <p>Questions</p>
    <div class="card">
      <div class="question"><%- data[0].title %></div>
      <p><%- data[0].description %></p>
      <img src="http://localhost:3001/<%- data[0].image %>" alt="question image">
      <p class="author"><i>Author: <%- data[0].user.username %></i></p>
    <i>posted on: <%-new Date(data[0].createdAt).toLocaleDateString() %></i>
    </div>
    <p>Answers</p>
     <% answers.forEach(answer => { %>
     <div class="answer">
          <div class="card">
            <p><%- answer.answerText %></p>
            <p class="author"><i>Answered by: <%- answer.user.username %></i></p>
            <i>answered on: <%- new Date(answer.createdAt).toLocaleDateString() %></i>
          </div>
           <%})%>
        </div>
    
    
    <form action="/answer/<%- data[0].id%>" class="answer-form" method="post">
      <div class="answer-section">
        <label for="answerText">Your Answer:</label>
        <textarea 
          name="answerText" 
          id="answer"
          placeholder="Share your thoughts and provide a helpful answer..."
          required
        ></textarea>
      </div>
      <button type="submit" class="submit-btn">Submit Answer</button>
    </form>
  </div>
</body>
</html>